extends ../layout


        
block content

    h2 
        span #{title} 
        a(href="/admin/users/new" class="btn btn-primary") Ajouter
    hr

    div.clearfix
   
    section
        //pre #{posts}
       
        table.table.table-striped
            thead
                tr.panel.panel-default
                    td Date d'inscription
                    td Nom
                    td Email
                    td Type
                    td.text-right Actions
                    
            tbody
            each user in users
                tr
                    td #{moment(user.createdAt).format('MMMM Do YYYY')}
                    td #{user.name}
                    td #{user.email}
                    td #{user.type}
                    td.text-right
                        .btn-group
                            a(href="/admin/users/edit/#{user._id}" class="btn btn-primary") Edit
                            a(href="/admin/users/delete/#{user._id}" class="btn btn-danger") Delete
                    
                       
        